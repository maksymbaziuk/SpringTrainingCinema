<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:c="http://www.springframework.org/schema/c"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
 		http://www.springframework.org/schema/util
 		http://www.springframework.org/schema/util/spring-util-3.2.xsd">

    <import resource="test-in-memory-data-source-config.xml"/>
    <import resource="test-discount-config.xml"/>

    <bean id="auditoriumService" class="com.baziuk.spring.auditorium.service.AuditoriumCinemaService" p:auditoriumDAO="#{auditoriumDAO}"/>

    <bean id="userService" class="com.baziuk.spring.user.service.CinemaUserService" p:userDAO="#{userDAO}"/>

    <bean id="eventService" class="com.baziuk.spring.events.service.EventCinemaService"
          p:eventDAO="#{eventDAO}" p:auditoriumService="#{auditoriumService}"/>

    <bean id="bookingService" class="com.baziuk.spring.booking.service.BookingCinemaService" p:bookingDAO="#{bookingDAO}" p:discountService="#{discountService}">
        <property name="vipMultiplier" value="2"/>
        <property name="rankMultiplier" value="1.2"/>
    </bean>

</beans>